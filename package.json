{
  "name": "ray",
  "version": "0.1.0",
  "private": true,
  "description": "Lightful style guide and component library",
  "author": "Lightful",
  "main": "dist/js/index.js",
  "type": "dist/js/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && run-p build:css build:js",
    "build:css": "node-sass src/scss/ray.scss dist/css/ray.css",
    "build:icons": "ts-node scripts/buildIcons.ts --svg-dir src/icons --output-file src/js/components/Icon/icons.tsx",
    "build:js": "tsc",
    "build:storybook": "build-storybook -c .storybook -o storybook",
    "create:component": "ts-node scripts/createComponent.ts --dir src/js/components",
    "format": "run-p format:css format:js",
    "format:css": "prettier --write './src/scss/**/*.scss'",
    "format:js": "prettier --write './src/js/**/*.{ts,tsx}'",
    "lint": " run-p lint:css lint:js",
    "lint:css": "stylelint 'src/scss/*.scss' --syntax scss",
    "lint:js": "eslint src/js -f table --ext .ts,.tsx,.js",
    "start": "run-p watch:css storybook",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest",
    "watch:css": "chokidar 'src/scss/*.scss' -c 'run-s lint:css build:css'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged && yarn build && git add dist"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --max-warnings 1",
      "git add"
    ],
    "src/**/*.scss": [
      "prettier --write",
      "stylelint --syntax scss",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@jest/core": "^24.0.0",
    "bootstrap": "~4.3.0",
    "classnames": "^2.2.6",
    "date-fns": "^1.30.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-lines-ellipsis": "^0.14.1",
    "react-select": "^2.1.0",
    "run-node": "^1.0.0",
    "ts-node": "^8.6.2"
  },
  "devDependencies": {
    "@sambego/storybook-state": "^1.3.2",
    "@storybook/addon-actions": "^5.3.13",
    "@storybook/addon-knobs": "^5.3.13",
    "@storybook/addon-links": "^5.3.13",
    "@storybook/addons": "^5.3.13",
    "@storybook/react": "^5.3.13",
    "@types/classnames": "^2.2.9",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.5.2",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-select": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "chokidar-cli": "^2.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "glob": "^7.1.3",
    "handlebars": "^4.0.12",
    "husky": "^1.2.0",
    "jest": "^25.1.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "sass-loader": "^7.1.0",
    "storybook": "^5.3.13",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.0",
    "svgo": "^1.1.1",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "yargs": "^13.1.0"
  }
}
