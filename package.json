{
  "name": "ray",
  "version": "0.1.0",
  "description": "Lightful style guide and component library",
  "author": "Lightful",
  "main": "dist/js",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && yarn build:icons && run-p build:css build:js",
    "build:css": "node-sass src/scss/ray.scss dist/css/ray.css",
    "build:icons": "babel-node scripts/buildIcons.js --svg-dir src/icons --output-file src/js/components/Icon/icons.js",
    "build:js": "babel src/js --out-dir dist/js --ignore '*.stories.js, *.spec.js, setupTests.js'",
    "build:storybook": "build-storybook -c .storybook -o storybook",
    "create:component": "babel-node scripts/createComponent.js --dir src/js/components",
    "format": "run-p format:css format:js",
    "format:css": "prettier --write './src/scss/**/*.scss'",
    "format:js": "prettier --write './src/js/**/*.js'",
    "lint": " run-p lint:css lint:js",
    "lint:css": "stylelint 'src/scss/*.scss' --syntax scss",
    "lint:js": "eslint src/js -f table --ext .js",
    "start": "run-p watch:css storybook",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest",
    "watch:css": "chokidar 'src/scss/*.scss' -c 'run-s lint:css build:css'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && flow check && yarn build && git add dist"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --max-warnings 1",
      "git add"
    ],
    "src/**/*.scss": [
      "prettier --write",
      "stylelint --syntax scss",
      "git add"
    ]
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "classnames": "^2.2.6",
    "date-fns": "^1.29.0",
    "react": "16.6.1",
    "react-dom": "16.6.1",
    "react-dotdotdot": "^1.2.3",
    "react-select": "^2.1.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-flow-react-proptypes": "^24.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "chokidar-cli": "^1.2.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.25.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.85.0",
    "glob": "^7.1.3",
    "handlebars": "^4.0.12",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.6.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.3.1",
    "svgo": "^1.1.1",
    "yargs": "^12.0.2"
  }
}
