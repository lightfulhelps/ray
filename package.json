{
  "name": "ray",
  "version": "0.1.0",
  "description": "Lightful style guide and component library",
  "author": "Lightful",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && run-p build:css build:js",
    "build:css": "node-sass src/scss/ray.scss dist/css/ray.css",
    "build:js": "babel src/js --out-dir dist/js",
    "build:storybook": "build-storybook -c .storybook -o docs/storybook",
    "format": "run-p format:css format:js",
    "format:css": "prettier --write './src/scss/**/*.scss'",
    "format:js": "prettier --write './src/js/**/*.js'",
    "lint": " run-p lint:css lint:html lint:js",
    "lint:css": "stylelint 'src/scss/*.scss' --syntax scss",
    "lint:html": "bootlint ./index.html -d W005",
    "lint:js": "eslint src/js -f table --ext .js",
    "start": "",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "run-p test:css test:js",
    "test:css": "",
    "test:js": "",
    "watch:css": "chokidar 'src/scss/*.scss' -c 'run-s lint:css build:css'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": ["prettier --write", "eslint --max-warnings 1", "git add"],
    "src/**/*.scss": ["prettier --write", "stylelint --syntax scss", "git add"]
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "classnames": "^2.2.6",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/addon-knobs": "^3.4.10",
    "@storybook/react": "^3.4.10",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "bootlint": "^0.14.2",
    "chokidar-cli": "^1.2.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.5.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.3.0"
  }
}
